    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.1",
    "mysql": "^2.18.1",
    "terser-webpack-plugin": "^5.3.0",
    "typescript": "^3.9.10",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@dl/shared": "workspace:*",
    "apollo-server-express": "^2.25.3",
    "apollo-server-lambda": "^3.5.0",
    "aws-sdk": "^2.1046.0",
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "bufferutil": "^4.0.5",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.15",
    "pg": "^8.7.1",
    "pg-query-stream": "^4.2.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.45",
    "utf-8-validate": "^5.0.7"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index_server.ts",
    "start": "node ./dist/index.js",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "new-migration": "pnpm run typeorm migration:generate -n initial --dir 'src/migrations'",
    "build-deps": "cd ../Shared/ && tsc",
    "migrate": "typeorm migration:generate -n FoundChanges",
    "webpack": "webpack --config ./webpack.config.js",
    "build": "npm run build-deps && tsc && webpack --config ./webpack.config.js && npm run upload",
    "upload": "powershell.exe Compress-Archive -Path .\\.webpack\\index.js -DestinationPath .\\.webpack\\bundle.zip -Force && aws lambda update-function-code --function-name digital-library --zip-file fileb://.webpack/bundle.zip --region eu-west-2 && echo Done"
  }
}